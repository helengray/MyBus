<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:baiduadsdk="http://schemas.android.com/apk/res/com.xm.bus"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="109dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/left_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/location_anim_left"
            android:contentDescription="@string/hello_world"
            android:visibility="gone" />

        <Button
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_location_selector"
            android:text="@string/location" />

        <ImageView
            android:id="@+id/right_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/location_anim_right"
            android:contentDescription="@string/hello_world"
            android:visibility="gone" />
    </LinearLayout>

    <com.baidu.mobads.AdView
        android:id="@+id/adView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        baiduadsdk:adId=""
        baiduadsdk:adSize="0" />

</RelativeLayout>